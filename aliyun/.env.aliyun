# Mall项目阿里云部署环境变量配置

# ===========================================
# 基础配置
# ===========================================
COMPOSE_PROJECT_NAME=mall
PROJECT_NAME=mall
APP_VERSION=1.0-SNAPSHOT
TZ=Asia/Shanghai
SPRING_PROFILES_ACTIVE=prod

# 数据存储路径
DATA_PATH=/Users/liubingna/nana/project/mall/deploy/aliyun/data

# ===========================================
# 阿里云RDS MySQL配置
# ===========================================
# RDS实例内网地址（请替换为您的RDS实例地址）
ALIYUN_RDS_HOST=your_rds_host
ALIYUN_RDS_PORT=3306
MYSQL_DATABASE=mall
MYSQL_USER=your_mysql_user
MYSQL_PASSWORD=your_mysql_password

# 本地MySQL配置（如果使用容器部署MySQL）
MYSQL_ROOT_PASSWORD=Mall@2024

# ===========================================
# 阿里云Redis配置
# ===========================================
# Redis实例内网地址（请替换为您的Redis实例地址）
ALIYUN_REDIS_HOST=your_redis_host
ALIYUN_REDIS_PORT=6379
REDIS_PASSWORD=Mall@2024

# RabbitMQ配置
RABBITMQ_DEFAULT_USER=mall
RABBITMQ_DEFAULT_PASS=Mall@2024

# MongoDB配置
MONGO_INITDB_ROOT_USERNAME=mall
MONGO_INITDB_ROOT_PASSWORD=Mall@2024

# Elasticsearch配置
ES_JAVA_OPTS="-Xms512m -Xmx1024m"

# ===========================================
# 容器服务配置（MongoDB、RabbitMQ、Elasticsearch）
# ===========================================

# ===========================================
# 域名配置
# ===========================================
# 请替换为您的域名
DOMAIN_NAME=your_domain
ADMIN_DOMAIN=your_admin_domain
PORTAL_DOMAIN=your_portal_domain
API_DOMAIN=your_api_domain

# ===========================================
# SSL证书配置
# ===========================================
SSL_CERT_PATH=/data/mall/ssl/cert.pem
SSL_KEY_PATH=/data/mall/ssl/key.pem

# ===========================================
# 阿里云OSS配置
# ===========================================
# OSS配置（请替换为您的OSS配置）
ALIYUN_OSS_ENDPOINT=your_oss_endpoint
ALIYUN_OSS_ACCESS_KEY_ID=your_access_key_id
ALIYUN_OSS_ACCESS_KEY_SECRET=your_access_key_secret
ALIYUN_OSS_BUCKET_NAME=your_bucket_name
ALIYUN_OSS_CALLBACK=

# MinIO配置（备选方案）
MINIO_ENDPOINT=http://minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=mall

# 数据存储路径
DATA_PATH=/Users/liubingna/nana/project/mall/deploy/aliyun/data

# 日志配置
LOG_LEVEL=INFO
LOG_PATH=/data/mall/logs

# ===========================================
# JVM配置
# ===========================================
JAVA_OPTS="-Xms512m -Xmx1024m -XX:+UseG1GC -XX:MaxGCPauseMillis=200"
JAVA_OPTS_ADMIN="-Xms512m -Xmx1024m -XX:+UseG1GC -XX:MaxGCPauseMillis=200"
JAVA_OPTS_PORTAL="-Xms512m -Xmx1024m -XX:+UseG1GC -XX:MaxGCPauseMillis=200"
JAVA_OPTS_SEARCH="-Xms512m -Xmx1024m -XX:+UseG1GC -XX:MaxGCPauseMillis=200"

# ===========================================
# 监控配置
# ===========================================
ENABLE_MONITORING=true
MONITOR_EMAIL=admin@yourdomain.com
MONITOR_WEBHOOK=https://hooks.slack.com/services/xxx/xxx/xxx

# ===========================================
# 安全配置
# ===========================================
JWT_SECRET=mySecretKey123456789
DRUID_PASSWORD=admin123

# ===========================================
# 邮件配置（可选）
# ===========================================
MAIL_HOST=smtp.qq.com
MAIL_PORT=587
MAIL_USERNAME=your-email@qq.com
MAIL_PASSWORD=your-email-password

# ===========================================
# 短信配置（可选）
# ===========================================
SMS_ACCESS_KEY_ID=your_sms_access_key_id
SMS_ACCESS_KEY_SECRET=your_sms_access_key_secret
SMS_SIGN_NAME=商城
SMS_TEMPLATE_CODE=SMS_123456789

# ===========================================
# 网络配置
# ===========================================
NETWORK_SUBNET=172.20.0.0/16